@page
@model Project_Razor.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-light">Tem certeza que deseja excluir este item?</h1>
<div>
    <h4 class="text-light">Informações do Produto</h4>
    <hr style="color: whitesmoke;" />
    <dl class="row text-light">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Estoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Estoque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ImageName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ImageName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-page="./Index">Lista de Produtos</a>
    </form>
</div>
