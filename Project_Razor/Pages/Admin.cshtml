@page
@model Project_Razor.Pages.AdminModel
@{
    ViewData["Title"] = "Área Administrativa";
}

<main class="container mt-2 col-md-4">
    <div class="row justify-content-md-center">
        <div class="col-md-12 mt-3 text-light">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <div class="container">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Admin.Nome" class="control-label"></label>
                        <span class="text-muted">o usuário é: sa</span>
                        <input asp-for="Admin.Nome" class="form-control col-4" />
                        <span asp-validation-for="Admin.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Admin.Senha" class="control-label"></label>
                        <span class="text-muted">a senha é: 1234</span>
                        <input type="password" asp-for="Admin.Senha" class="form-control col-4" />
                        <span asp-validation-for="Admin.Senha" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" value="Confirmar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
